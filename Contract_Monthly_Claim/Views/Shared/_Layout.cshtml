<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract_Monthly_Claim</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Contract_Monthly_Claim.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
</head>
<body>
    <header>
        
        <nav class="sidebar">
            <div class="profile">
                <div>
                    <img class="profilepic" src="Images/myprofilepic.jpg"/>
                </div>
     
                <div class="userdetails">
                    <p><strong>Mzukisi Tekeni</strong></p>
                    <p><strong>Job Title:</strong> Lecturer</p>
                </div>
                
            </div>

            <ul>
                <li><a href="#"><i class="fa-solid fa-gauge"></i>  Dashboard</a></li>
                <li><a href="#" id="openLogin"> <i class="fa-solid fa-file-circle-plus"></i> New Claim</a></li>
                <li><a href="#"><i class="fa-solid fa-bell"></i> Notifications</a></li>
                <li><a href="#"><i class="fa fa-sign-out" aria-hidden="true"></i>Sign out</a></li>
            </ul>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Login Modal -->
    <div id="loginModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Submit Claim</h2>
            <form method="post" action="/Account/Login">
                <label>Username</label>
                <input type="text" name="Username" placeholder="Enter Username" required />

                <label>Password</label>
                <input type="password" name="Password" placeholder="Enter Password" required />

                <button type="submit">Login</button>
            </form>
        </div>
    </div>

    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
